{
    "build": { "dockerfile": "../Dockerfile" },
  
    "customizations": {
      "vscode": {
        "extensions": [
            "vscjava.vscode-java-debug",
            "vscjava.vscode-java-test",
            "redhat.java",
            "vscjava.vscode-maven",
            "vscjava.vscode-java-dependency",
            "scalameta.metals",
            "scala-lang.scala-snippets",
            "vscjava.vscode-java-test",
            "ms-azuretools.vscode-docker",
            "mshr-h.VerilogHDL"
        ]
      }
    },

    "mounts": [
      "type=bind,source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/ubuntu/.ssh,readonly,consistency=cached"
    ],

    "remoteUser": "ubuntu"
}